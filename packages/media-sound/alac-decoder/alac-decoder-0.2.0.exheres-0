SUMMARY="Basic decoder for Apple Lossless Audio Codec files (ALAC)"
HOMEPAGE="http://craz.net/programs/itunes/alac.html"
N="alac_decoder"
DOWNLOADS="http://craz.net/programs/itunes/files/$N-$PV.tgz"

SLOT="0"
PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
	build:
		sys-apps/sed
"

WORK="$WORKBASE/$N"

src_compile() {
	emake
}

src_install() {
	dobin alac || die "dobin failed"
	dodoc README
}
