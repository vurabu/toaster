SUMMARY="Script to download and install dlls needed to run some programs in wine"
HOMEPAGE="http://winetricks.org/"
DOWNLOADS="http://winetricks.org/winetricks"

SLOT="0"
PLATFORMS="~amd64 ~x86"

src_unpack() {
    mkdir $WORK
    mv $PN $WORK
}

src_install() {
    dobin $WORK/$PN
}
